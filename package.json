{
  "name": "krayonjs",
  "version": "1.1.0",
  "description": "Make javascript Canvas API simpler and easier for drawing 2D graphics",
  "author": {
    "email": "fazlecode@gmail.com",
    "name": "Fazle Adyuta U."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KucingKode/krayonjs.git"
  },
  "bugs": {
    "url": "https://github.com/KucingKode/krayonjs/issues"
  },
  "keywords": [
    "canvas",
    "graphic",
    "graphics",
    "drawing",
    "CanvasRenderingContext2D",
    "frontend",
    "2d"
  ],
  "license": "MIT",
  "main": "dist/krayon.cjs.js",
  "module": "dist/krayon.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build:watch": "rollup -c -w",
    "build": "rollup -c",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "changeset": "changeset",
    "version-apply": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "post-commit": "git update-index --again"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --fix"
    ]
  },
  "dependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@rollup/plugin-typescript": "11.0.0",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "eslint": "8.35.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "lint-staged": "13.1.2",
    "rollup": "2.79.1",
    "simple-git-hooks": "2.8.1"
  }
}
